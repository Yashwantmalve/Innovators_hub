<% layout("/layout/boilerplate") %>
<body>
    <div class="card col-6 offset-4 " style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= Student._id %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= Student.name %></h6>
          <p class="card-text"><%= Student.class %></p>
          <form action="/students/<%= Student._id %>/edit">
            <button>edit</button>
          </form>
          <form method="post" action="/students/<%= Student._id %>?_method=DELETE">
            <button>DELETE</button>
          </form>
        </div>
      </div>
</body>